<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/default_playback_background">

    <ImageButton
        android:id="@id/exo_player_controller_back_landscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:contentDescription="back"
        android:src="@drawable/ic_arrow_back_white_24dp" />

    <TextView
        android:id="@id/exo_player_video_name_landscape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:paddingRight="0dp"
        android:paddingLeft="8dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="Now playing" />

    <FrameLayout
        android:id="@+id/exo_player_controller_top_custom_view_landscape"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</LinearLayout>